# --- Primary Keys (Required by Backend) ---
# These must be set for the main api usage
DEEPGRAM_API_KEY=your_deepgram_key_here
GROQ_API_KEY=your_groq_key_here

# --- Service 1 Keys (Microservice) ---
S1_DEEPGRAM_API_KEY=your_s1_deepgram_key
S1_GROQ_API_KEY=your_s1_groq_key

# --- Service 2 Keys (Rotation/Backup) ---
S2_DEEPGRAM_API_KEY=your_s2_deepgram_key
S2_GROQ_API_KEY=your_s2_groq_key

# --- "M" Keys ---
M_DEEPGRAM_API_KEY=your_m_deepgram_key
M_GROQ_API_KEY=your_m_groq_key

# --- "D" Keys ---
D_DEEPGRAM_API_KEY=your_d_deepgram_key
D_GROQ_API_KEY=your_d_groq_key

# --- URLs ---
BASE_URL=http://localhost:8000
MICROSERVICE_URL=http://localhost:8000

# --- Database ---
DATABASE_URL=postgresql+asyncpg://user:password@host:port/dbname?ssl=require

# --- Security ---
# Generate using: python -c "import secrets; print(secrets.token_urlsafe(32))"
JWT_SECRET_KEY=your_jwt_secret_key_here
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7
MAX_SESSIONS_PER_USER=10

# Internal authentication for microservice
INTERNAL_API_KEY=your_internal_api_key_here

# --- OAuth Configuration ---
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret

GITHUB_CLIENT_RESET_ID=your_github_reset_id
GITHUB_CLIENT_RESET_SECRET=your_github_reset_secret

# --- Rate Limits ---
APP_USER_RATE_LIMIT_RPM=12
APP_USER_RATE_LIMIT_RPD=600
APP_USER_RATE_LIMIT_TPM=6000

GROQ_RPM_LIMIT=30
GROQ_TPM_LIMIT=12000
